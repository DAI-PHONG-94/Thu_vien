@model IEnumerable<WebLibary.Models.Entities.Book>

<h2>Danh sách Sách</h2>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên Sách</th>
            <th>Tác giả</th>
            <th>Thể loại</th>
            <th>Hình ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Name</td>
                <td>@book.Author.AuthorName</td>
                <td>@book.Category.CategoryName</td>
                 <td>
                    <img src="@book.Photo" alt="Hình ảnh sách" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.BookId">Chỉnh sửa</a> |
                    <a asp-action="Details" asp-route-id="@book.BookId">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@book.BookId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>